model Recipe {
  id           String   @id @default(uuid())
  title        String
  description  String
  ingredients  String[]
  steps        String[]
  difficulty   Difficulty
  cookingTime  Int
  imageUrl     String?
  source       Source   @default(INTERNAL)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Source {
  INTERNAL
  EXTERNAL
}
